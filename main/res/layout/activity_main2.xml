<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Weight"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Goal Weight"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerText" />

    <!-- GridLayout for Date and Weight (2x4) -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- Row 0: Date and Weight -->
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="left" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="WEIGHT"
            android:textSize="18sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="ADD"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="DELETE"
            android:padding="8dp"
            android:textSize="18sp" />

        <!-- Row 1: Date and Weight -->
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="01/01/2024"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="200lbs"
            android:textSize="18sp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="+"
            android:backgroundTint="@color/blue"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:gravity="center"
            android:padding="8dp"
            android:text="-"
            android:backgroundTint="@color/blue"/>

        <!-- Row 2: Date and Weight -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/01/2024"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="190lbs"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="+"
            android:backgroundTint="@color/blue"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:gravity="center"
            android:padding="8dp"
            android:text="-"
            android:backgroundTint="@color/blue"/>

        <!-- Row 3: Date and Weight -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03/01/2024"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="180lbs"
            android:textSize="18sp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="+"
            android:backgroundTint="@color/blue"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="-"
            android:backgroundTint="@color/blue"/>

        <!-- Row 4: Date and Weight -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/01/2024"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="175lbs"
            android:textSize="18sp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="+"
            android:backgroundTint="@color/blue"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:gravity="center"
            android:padding="8dp"
            android:text="-"
            android:backgroundTint="@color/blue"/>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>